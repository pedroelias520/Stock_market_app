<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_color"
>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/circle_corners"
            android:layout_width="600dp"
            android:layout_height="600dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="312dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.502">

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/border_white"
            android:layout_width="350dp"
            android:layout_height="522dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/constraintLayout2" app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintVertical_bias="0.559">

        <Button
                android:background="@drawable/corners_border"
                android:text="Criar"
                android:layout_width="150dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#ffffff"
                android:layout_height="wrap_content" android:id="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.982"/>
        <EditText
                android:background="@drawable/corners_border_2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:text="Quantidade"
                android:fontFamily="@font/montserrat"
                android:textColor="#555555"
                android:textSize="15dp"
                android:padding="10dp"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintHorizontal_bias="0.241"
                android:layout_marginTop="56dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/editText"
                app:layout_constraintVertical_bias="0.0"/>
        <EditText
                android:background="@drawable/corners_border_2"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:textSize="15dp"
                android:text="Preço"
                android:fontFamily="@font/montserrat"
                android:padding="10dp"
                android:textColor="#555555"
                android:ems="10"
                android:id="@+id/editText2"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintHorizontal_bias="0.235"
                android:layout_marginBottom="208dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/editText"
                app:layout_constraintVertical_bias="1.0"/>
        <EditText
                android:background="@drawable/corners_border_2"
                android:padding="10dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="number"
                android:textColor="#555555"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                android:text="Cotação"
                android:ems="10"
                android:id="@+id/editText" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp" app:layout_constraintHorizontal_bias="0.216"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.339"/>
        <RadioGroup
                android:layout_width="138dp"
                android:layout_height="116dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.15"
                app:layout_constraintVertical_bias="0.802">
            <RadioButton
                    android:text="Venda"
                    android:buttonTint="#ff0000"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2" android:layout_weight="1"/>
            <RadioButton
                    android:text="Compra"
                    android:buttonTint="#00ff00"
                    android:width="150dp"
                    android:fontFamily="@font/montserrat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton" android:layout_weight="1"/>
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>